<!-- Hero Start -->
<section class="bg-half-170 d-table w-100" style="background: url('<%= asset_path 'bg/about.jpg' %>') center;">
  <div class="bg-overlay bg-gradient-overlay"></div>
  <div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="col-12">
        <div class="title-heading text-center">
          <!--          <small class="text-white-50 mb-1 fw-medium text-uppercase mx-auto">Get in touch</small>-->
          <h5 class="heading fw-semibold mb-0 page-heading text-white title-dark">Recover Password</h5>
        </div>
      </div><!--end col-->
    </div><!--end row-->

    <div class="position-middle-bottom">
      <nav aria-label="breadcrumb" class="d-block">
        <ul class="breadcrumb breadcrumb-muted mb-0 p-0">
          <li class="breadcrumb-item"><a href="index.html">Starty</a></li>
          <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
        </ul>
      </nav>
    </div>
  </div><!--end container-->
</section><!--end section-->
<!-- Hero End -->
<section class="section">
  <div class="container mt-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-md-6 text-center">
          <%= f.label :email %><br/>
        </div>
        <div class="col-md-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-6"></div>
        <div class="col-md-6">
          <%= f.submit "Send me reset password instructions", class: 'form-control btn btn-primary' %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-6"></div>
      <div class="col-md-6">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</section>
