<style>
    .accordion-item {
        background-color: #f8f9fa; /* Set the default background color for closed accordion items */
    }
    .accordion-button {
        background-color: #f8f9fa; /* Set the background color for the accordion button */
    }
    .accordion-button:not(.collapsed) {
        background-color: #e9ecef; /* Set the background color for the accordion button when expanded */
    }
    .accordion-button.collapsed {
        background-color: #f8f9fa !important; /* Set the background color for the accordion button when collapsed */
    }
    .btn-background-accordion{
        background-color: #f8f9fa !important;
    }
</style>
<!-- Hero Start -->
<section class="bg-half-80 d-table bg-primary bg-gradient w-100">
  <div class="bg-overlay bg-gradient-overlay"></div>
  <div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="col-12">
        <div class="title-heading text-center">
          <small class="text-white-50 mb-1 fw-medium text-uppercase mx-auto">Questions & Answers</small>
          <h5 class="heading fw-semibold mb-0 page-heading text-white title-dark">FAQs</h5>
        </div>
      </div><!--end col-->
    </div><!--end row-->

    <div class="position-middle-bottom">
      <nav aria-label="breadcrumb" class="d-block">
        <ul class="breadcrumb breadcrumb-muted mb-0 p-0">
          <li class="breadcrumb-item"><a href="index.html">TouchRails</a></li>
          <li class="breadcrumb-item active" aria-current="page">FAQs</li>
        </ul>
      </nav>
    </div>
  </div><!--end container-->
</section><!--end section-->
<!-- Hero End -->

<section class="section">
  <div class="accordion mt-4 pt-2">
    <div class="container mt-5">
      <% @faq.each_with_index do |faq, index| %>
        <div class="accordion-item mt-5 accordion-item rounded border-0 shadow">
          <h2 class="accordion-header" id="faqItem<%= index + 1 %>">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index + 1 %>">
              <b class="text-dark">Question #<%= index + 1 %>: <%= faq.query %></b>
            </button>
          </h2>
          <div id="collapse<%= index + 1 %>" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Answer: <%= faq.answer.html_safe %>.
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
